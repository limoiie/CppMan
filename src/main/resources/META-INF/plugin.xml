<idea-plugin>
    <id>com.github.limoiie.cppman</id>
    <name>CppMan</name>
    <vendor>limoiie</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.limoiie.cppman.services.OuterManAppService"/>
        <projectService serviceImplementation="com.github.limoiie.cppman.services.MyProjectService"/>
        <toolWindow id="Cpp Man" secondary="true" icon="AllIcons.General.Modified" anchor="right"
                    factoryClass="com.github.limoiie.cppman.toolwindows.CppManToolWindowFactory" />
        <applicationService serviceImplementation="com.github.limoiie.cppman.services.ManAppService"/>
        <applicationService serviceImplementation="com.github.limoiie.cppman.services.ManDbAppService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.limoiie.cppman.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <actions>
        <action id="com.github.limoiie.cppman.actions.CppManAction"
                class="com.github.limoiie.cppman.actions.CppManAction" text="Man Cpp"
                description="Man cppreference page and show in quick documentation view">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift alt M"/>
        </action>
    </actions>

</idea-plugin>
